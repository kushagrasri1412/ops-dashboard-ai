# Required for real Copilot calls
OPENAI_API_KEY= 

# Used by /api/copilot and the eval harness (dev key is fine locally)
COPILOT_API_KEY=dev_local_key

# Data mode for API routes:
# - demo: fully local deterministic data (no external dependencies)
# - live: fetches public dataset for activity + derives revenue from cached activity
# - mixed: demo revenue + cached live activity
DATA_MODE=demo

# TTL for live dataset cache (seconds)
DATA_CACHE_TTL_SECONDS=300

# Optional: override the public dataset URL used for live activity
LIVE_ACTIVITY_URL=https://jsonplaceholder.typicode.com/todos

# Optional: override model selection
COPILOT_MODEL_CHEAP=gpt-4o-mini
COPILOT_MODEL_QUALITY=gpt-4o
